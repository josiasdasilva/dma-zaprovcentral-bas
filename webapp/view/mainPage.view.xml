        id="shell"
        appWidthLimited="false" >
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>titleMainPage}">
					<content>
                        

                        <l:VerticalLayout width="100%">
                            <fb:FilterBar
                                id="idFilterBar01"
                                reset="onReset"
                                search="onSearch"
                                clear="onClear"
                                cancel="onCancel" 
                                showRestoreButton="true"
                                showClearButton="true" >

